<Window x:Class="fileWriterExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fileWriterExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <TextBox x:Name="txtFile"></TextBox>
        <TextBox x:Name="txtInput"></TextBox>
        <Button x:Name="btnCreateFile" Click="btnCreateFile_Click">Create File</Button>
        <Button x:Name="btnAppendFile" Click="btnAppendFile_Click">Append File</Button>
    </StackPanel>
</Window>
